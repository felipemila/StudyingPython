## This is a simple graph about the coronavirus situaiton in my home town, Araraquara.

## Matplotlib and NumPy
import matplotlib
import matplotlib.pyplot as plt
import numpy as np

labels = ['Infectados', 'Em Quarentena', 'Recuperados', 'Óbitos Suspeitos', 'Óbitos']
corona_infectados = [147, 22, 121, 4, 4]

x = np.arange(len(labels))  
width = 0.35  

fig, ax = plt.subplots()
rects1 = ax.bar(x - width/2, corona_infectados, width, label='18 de maio de 2020')


ax.set_ylabel('Casos')
ax.set_title('Coronavirus em Araraquara')
ax.set_xticks(x)
ax.set_xticklabels(labels)
ax.legend()


def autolabel(rects):
   
    for rect in rects:
        height = rect.get_height()
        ax.annotate('{}'.format(height),
                    xy=(rect.get_x() + rect.get_width() / 2, height),
                    xytext=(0, 3),  # 3 points vertical offset
                    textcoords="offset points",
                    ha='center', va='bottom')


autolabel(rects1)

fig.tight_layout()

plt.show()
